extends layout

block content
  h1 500
  p An error has occured

  h4 Error Details
  - var hasError = error.message && error.message.length;
  if ( hasError )
    pre= error.message
  else if ( typeof error === 'string' )
    pre= error
  else if development
    pre= JSON.stringify(error, null, '  ')
  if error.stack && development
    pre= error.stack
