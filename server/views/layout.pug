    link(rel="manifest" href="/manifest.json")

    if ( head && head.title )
      !=head.title
    else
      title LWJGL - Lightweight Java Gaming Library

    if ( head )
      !=head.meta

      !=head.link

    if ( production )
      style
        !=css
    else
      link(rel="stylesheet" href="/css/layout.css")

    if ( aphrodite && aphrodite.content.length )
      style(data-aphrodite="")!=aphrodite.content

  body

    block content

    if ( renderApp )
      if ( aphrodite )
        script(id="aphro-hydrate" type="application/json")!=JSON.stringify(aphrodite.renderedClassNames)
      script(src=`/js/${bundle}` async defer)
